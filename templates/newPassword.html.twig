{% block pageTitle %}
    Récupération du mot de passe
{% endblock %}

{% block body %}


{% block offers %}

<div class="container text-center" style="background:#f7f7f7">
    <div class="row text-center text-center-mobile">
        <p style="margin: 5rem">
            Bonjour {{ user.username }}. 
            <br>
            Merci de saisir ton nouveau mot de passe.
        </p>
        <form method="post" action="/setNewPassword">
            <div class="form-group" style="width: 50%; margin: auto">
                <input type="hidden" class="form-control" name="mail" value="{{ user.mail }}">
                {# <input type="password" id="password_reset" class="form-control" name="password" placeholder="Nouveau mot de passe" required >
                <input type="password" id="confirm_password_reset" class="form-control" name="password" placeholder="confirmer le mot de passe" required > #}
                <input type="password" name="password" class="form-control" placeholder="Mot de passe" id="password_reset" required>
				<input type="password" name="password" class="form-control" placeholder="Confirmez le mot de passe" id="confirm_password_reset" required>
                <button type="submit" class="btn btn-blue" style="margin-top: 1rem;">Changer mon mot de passe</button>
            </div>
        </form>
        
    </div>
</div>

{% endblock %}


{% extends 'base.html.twig' %}

{% block title %} - Admin{% endblock %}

{% block style %} {{ parent() }} {% endblock %}

{% block logoLink %} {{ parent() }} {% endblock %}

{% block navbarButtons %} 

    
    <li><a href="/talent">Espace Talents</a></li>
    <li><a href="/pro">Espace Entreprises</a></li>
    {% if user != null %}
        <li><a href="logout" class="btn btn-blue">Déconnexion</a></li>
    {% endif %}
    {% if user == null %}
        <li><a href="#" data-toggle="modal" data-target="#modalLogin" class="btn btn-blue">Connexion</a></li>
        <li><a href="#" data-toggle="modal" data-target="#modalRegistration" class="btn btn-blue">Inscription</a></li>
    {% endif %}

{% endblock %}
    

{% block header %}

    {{ parent()}}

{% endblock %}

{% block pageTitle %}
    Détails de votre profil
{% endblock %}

{% block body %}

    <section id="jobs" class="section gray-bg">
        <div class="container">
            <div class="text-center">
                <h1>{{ user.username }}</h1>
            </div>
            <div class="row text-center profile-details">
                    <div>
                        <h3 class="details">Nom:</h3><p>{{ user.firstname }}</p>
                    </div>
                    <div>
                        <h3 class="details">Nom:</h3><p>{{ user.lastname }}</p>
                    </div>
                    <div>
                        <h3 class="details">Email:</h3><p>{{ user.mail }}</p>
                    </div>
            <div class="row title text-center">
                <a class="light offer-link btn btn-blue" href="/admin">Panneau d'administration</a>
            </div>
            <div class="row title text-center">
                <a href="#" data-toggle="modal" data-target="#modalEditAdmin" class="btn btn-blue">Modifier vos informations</a>
            </div>
        </div>
    </section>

    {% block footer %} {{ parent() }} {% endblock %}

{% endblock %}

{% block securityForms %}
    <div class="modal fade" id="modalEditAdmin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content modal-popup">
                <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
                <h3 class="white">Modifier profil Admin</h3>
                <form action="" class="popup-form">
                    <input type="text" name="firstname" class="form-control form-white" value="{{ user.firstname }}" placeholder="Remplacer {{ user.firstname }} ?">
                    <input type="text" name="lastname" class="form-control form-white" value="{{ user.lastname }}" placeholder="Remplacer {{ user.lastname }} ?">
                    <input type="text" name="email" class="form-control form-white" value="{{ user.mail }}" placeholder="Remplacer {{ user.mail }} ?">
                    
                    <button type="submit" class="btn btn-submit" formaction="adminEdit" formmethod="post">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


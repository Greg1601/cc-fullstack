{% extends 'base.html.twig' %}

{% block title %} - Offres d'Emploi{% endblock %}

{% block logoLink %}"/talent"{% endblock %}

{% block navbar %} 
    
        <li><a href="#intro">Home</a></li>
        {# <li><a href="#services">Qui sommes nous</a></li> #}
        <li><a href="#jobs">Offres d'Emploi</a></li>
        {# <li><a href="#pricing">Tarifs et Contact</a></li> #}
        <li><a href="/talent">Espace Candidats</a></li>
        <li><a href="/pro">Espace Entreprises</a></li>
        <li><a href="#" data-toggle="modal" data-target="#modal1" class="btn btn-blue">Connexion</a></li>

    {% endblock %}

{% block header %}

    {{ parent() }}

{% endblock %}

{% block pageTitle %}
    Les Offres de Nos Partenaires
{% endblock %}

{% block intro %}

{% endblock %}

{% block body %}

    {% block offers %}
        <section id="jobs" class="section gray-bg">
            <div class="container">
                <div class="row">
                    {% for job in jobs %}
                        <div class="col-md-4">
                            <div class="jobs text-center">
                                <div class="cover" style="background:url('{{ job.company.picture }}'); background-size:cover; width: 100%; height: 100%;">
                                    <div class="overlay text-center">
                                        <h3 class="white">{{ job.company }}</h3>
                                        <h5 class="light light-white">{{ job.jobName }}</h5>
                                    </div>
                                </div>
                                <div class="title">
                                    <h5>{{ job.salary }}</h5>
                                    <h5 class="muted regular">{{ job.requiredExperience }}</h5>
                                </div>
                                <button data-toggle="modal" data-target="#modal1" class="btn btn-blue-fill">Consulter</button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endblock %}

{% endblock %}

{% block form %}
		<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content modal-popup">
					<a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
					<h3 class="white">Demande d'informations</h3>
					<form action="" class="popup-form">
						<input type="text" class="form-control form-white" placeholder="Nom">
						<input type="text" class="form-control form-white" placeholder="Email">
						<div class="dropdown">
							<button id="dLabel" class="form-control form-white dropdown" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Vos besoins
							</button>
							<ul class="dropdown-menu animated fadeIn" role="menu" aria-labelledby="dLabel">
								<li class="animated lightSpeedIn"><a href="#">Diffusion d'offre d'emploi</a></li>
								<li class="animated lightSpeedIn"><a href="#">Elaboration de cahier des charges</a></li>
								<li class="animated lightSpeedIn"><a href="#">Autre demande</a></li>
							</ul>
						</div>
						<div class="checkbox-holder text-left">
							<div class="checkbox">
								<input type="checkbox" value="None" id="squaredOne" name="check" />
								<label for="squaredOne"><span>J'accepte les <strong>conditions générales</strong></span></label>
							</div>
						</div>
						<button type="submit" class="btn btn-submit">Envoyer</button>
					</form>
				</div>
			</div>
		</div>
	{% endblock %}